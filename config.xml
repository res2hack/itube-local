<?xml version='1.0' encoding='utf-8'?>
<widget id="m.m" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>iTube</name>
    <description>
Aplikasi local video server seperti Youtube.
    </description>
    <author email="restu.gandhi@gmail.com" href="http://m.m">
        Restu Gandhi
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="26" />
        <preference name="orientation" value="landscape" />
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/logo36.png" />
        <icon density="mdpi" src="res/logo48.png" />
        <icon density="hdpi" src="res/logo72.png" />
        <icon density="xhdpi" src="res/logo96.png" />
        <icon density="xxhdpi" src="res/logo144.png" />
        <icon density="xxxhdpi" src="res/logo192.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <plugin name="cordova-plugin-console" spec="~1.0.1" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
    <engine name="browser" spec="~5.0.4" />
    <plugin name="cordova-plugin-screen-orientation" spec="~3.0.1" />
</widget>
